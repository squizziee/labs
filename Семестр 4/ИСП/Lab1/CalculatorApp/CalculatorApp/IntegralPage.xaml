<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorApp.IntegralPage"
             Shell.NavBarIsVisible="False"
             Title="IntegralPage">
    <VerticalStackLayout Padding="50,200" Spacing="20">
        <Label 
            Text="Press 'Start' to proceed"
            x:Name="infoText"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid RowDefinitions="*,*" ColumnDefinitions="*" RowSpacing="5">
            <ProgressBar Grid.Row="0" x:Name="progressBar" Progress="0"/>
            <Label HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="1" x:Name="progressText" Text="0%"/>
        </Grid>
        <Grid RowDefinitions="*" ColumnDefinitions="*,*" ColumnSpacing="5">
            <Button Grid.Column="0" x:Name="StartButton" Clicked="OnClicked" Text="Start"></Button>
            <Button Grid.Column="1" x:Name="CancelButton" IsEnabled="False" Clicked="OnClicked" Text="Cancel"></Button>
        </Grid>
    </VerticalStackLayout>
</ContentPage>